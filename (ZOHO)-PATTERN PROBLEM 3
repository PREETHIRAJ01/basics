#include<stdio.h>
#include <stdlib.h>
int main()
{
int n; 
scanf("%d",&n); 
int value=n,count=1,h=1,i,j; 
for(i=n;i>=1;i--)
{ 
value=n;
count=h;
for(j=1;j<=i;j++)
{ 
printf("%d",count);
count=count+value;
value--;
}
h=h+1;
printf("\n");
}
}
