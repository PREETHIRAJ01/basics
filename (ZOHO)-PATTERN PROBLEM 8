/******************************************************************************

        0
       101
      21012
     3210123
    432101234
   54321012345
   012345678910   
*******************************************************************************/
#include <stdio.h>

int main()
{
    int n=5,h=n-1;
    int num=0,num1,num2=1,space,i,j;
    for(i=0;i<=(n);i++)
    {
        
        for(space=0;space<=h;space++)
        {
            printf(" ");
        }
        int num1=num;
        for(j=h+1;j<=n;j++)
        {
            printf("%d",num1);
            num1--;
        }
        h--;
         num=num+1;
         //second part 
         num2=1;
         for(j=n+2;j<=(n+1+i);j++)
         {
             printf("%d",num2);
             num2++;
         }
        
        printf("\n");
    }
}
